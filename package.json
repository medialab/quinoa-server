{
  "name": "quinoa-server",
  "version": "0.3.0",
  "description": "Server application for quinoa client applications services",
  "main": "server.js",
  "scripts": {
    "test": "mocha -R spec --recursive $(find tests -name '*.spec.js')",
    "start": "node server",
    "dev": "nodemon server",
    "build-apps": "rm -rf builds; mkdir builds;node services/presentationAppBuilder/;node services/storyAppBuilder/",
    "postinstall": "npm run build-apps; mkdir data; mkdir data/stories; mkdir data/presentations;"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/medialab/quinoa-server.git"
  },
  "author": "Robin de Mourat",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/medialab/quinoa-server/issues"
  },
  "homepage": "https://github.com/medialab/quinoa-server#readme",
  "nodemonConfig": {
    "ignore": [
      "data/*",
      "builds/*"
    ],
    "delay": 2000
  },
  "dependencies": {
    "async": "^2.1.4",
    "bcrypt": "^1.0.3",
    "body-parser": "^1.16.0",
    "cors": "^2.8.1",
    "css-loader": "^0.28.0",
    "draft-js": "^0.10.0",
    "draft-js-export-html": "^0.6.0",
    "express": "^4.14.0",
    "express-validator": "^4.3.0",
    "file-loader": "^0.11.1",
    "fs-extra": "^5.0.0",
    "image-webpack-loader": "^3.1.0",
    "jsonwebtoken": "^8.1.0",
    "kotatsu": "^0.15.0",
    "lowdb": "^1.0.0",
    "morgan": "^1.9.0",
    "node-sass": "^4.3.0",
    "quinoa-presentation-player": "^0.2.6",
    "quinoa-story-player": "^0.2.11",
    "react": "^15.6.2",
    "react-dom": "^15.6.2",
    "sass-loader": "^6.0.3",
    "script-loader": "^0.7.0",
    "style-loader": "^0.18.2",
    "uglify-es-webpack-plugin": "0.0.3",
    "uuid": "^3.0.1",
    "webpack": "^3.4.1",
    "xml2js": "^0.4.17"
  },
  "devDependencies": {
    "chai": "^4.1.0",
    "mocha": "^3.2.0",
    "mock-fs": "^4.2.0",
    "nodemon": "^1.12.1",
    "request": "^2.79.0",
    "supertest": "^3.0.0"
  }
}
